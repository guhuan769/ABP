@page
@using Microsoft.AspNetCore.Mvc.Localization
@using MicroClassroom.Enterprise.Localization
@model MicroClassroom.BackendAdminApp.Host.Pages.BannerManagement.IndexModel
@inject IHtmlLocalizer<EnterpriseResource> L

@section scripts {
<abp-script src="/Pages/BannerManagement/index.js" />
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["BannerManagement"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                <abp-button id="NewBannerButton"
                    text="@L["Create"].Value"
                    icon="plus"
                    button-type="Primary"/>
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="bannerTable"></abp-table>
    </abp-card-body>
</abp-card>

