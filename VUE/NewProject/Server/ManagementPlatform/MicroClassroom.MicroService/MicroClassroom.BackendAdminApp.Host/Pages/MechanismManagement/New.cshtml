@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using MicroClassroom.Enterprise.Localization
@model MicroClassroom.BackendAdminApp.Host.Pages.MechanismManagement.NewModel
@inject IHtmlLocalizer<EnterpriseResource> L

@{
    Layout = null;
}
<form method="post" asp-page="/MechanismManagement/New">
    <abp-modal>
        <abp-modal-header title="@L["Create"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Mechanism.Name" label="机构全称" />
            <abp-input asp-for="Mechanism.Pinyin" label="拼音" />
            <abp-input asp-for="Mechanism.Slogo" label="口号" />
            <abp-input asp-for="Mechanism.Image" label="图像" />
            <abp-input asp-for="Mechanism.Introduce" label="介绍" />
            <abp-input asp-for="Mechanism.About" label="关于我们" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>