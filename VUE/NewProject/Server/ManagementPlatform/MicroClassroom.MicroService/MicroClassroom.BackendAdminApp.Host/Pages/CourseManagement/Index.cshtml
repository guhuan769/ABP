@page
@using Microsoft.AspNetCore.Mvc.Localization
@using MicroClassroom.Enterprise.Localization
@model MicroClassroom.BackendAdminApp.Host.Pages.CourseManagement.IndexModel
@inject IHtmlLocalizer<EnterpriseResource> L

@section scripts {
<abp-script src="/Pages/CourseManagement/index.js" />
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["CourseManagement"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                <abp-button id="NewCourseButton"
                    text="@L["Create"].Value"
                    icon="plus"
                    button-type="Primary"/>
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="courseTable"></abp-table>
    </abp-card-body>
</abp-card>

